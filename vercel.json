{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": ".*",
      "dest": "frontend/index.html"
    }
  ]
}
